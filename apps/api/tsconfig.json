{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "outDir": "dist",
    "types": ["node"]
  },
  "include": ["./src/**/*.ts", "./prisma/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
